<div class='container mt-4 form'>
    <h2>Đăng nhập</h2>
    <form method='POST' action='/user/login-now' class='mt-4 form-login'>
        <div class='form-group'>
            <label for='account'>Tài khoản</label>
            <input
                id='account-login'
                type='text'
                name='account'
                class='form-control'
                placeholder='Account'
                autocomplete='off'
                required
            />
        </div>
        <div class='form-group'>
            <label for='password-login'>Mật khẩu</label>
            <input
                type='password'
                name='password'
                class='form-control'
                id='password-login'
                placeholder='Password'
                required
            />
        </div>
        <div class='form-btn'>
            <button type='submit' class='btn btn-primary'>Đăng nhập</button>
        </div>
    </form>
</div>
