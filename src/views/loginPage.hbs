
<header class='container header-login'>
    <a href="/">
        <img class='logo' src="https://media.istockphoto.com/vectors/book-logo-template-vector-id1256528848?b=1&k=20&m=1256528848&s=612x612&w=0&h=T9559DTJrWCW2aVrIpQgcxl515QitubN_Bikya3w27k=" alt="logo">
    </a>
    <h2 class="header-title">Đăng nhập</h2>
</header>
<div class='container mt-4 form'>
    <form method='POST' action='/user/login-now' class='mt-4 form-login'>
        <div class='form-group'>
            <label for='account'>Tài khoản</label>
            <input
                id='account-login'
                type='text'
                name='account'
                class='form-control'
                placeholder='Account'
                autocomplete='off'
                required
            />
        </div>
        <div class='form-group'>
            <label for='password-login'>Mật khẩu</label>
            <input
                type='password'
                name='password'
                class='form-control'
                id='password-login'
                placeholder='Password'
                required
            />
        </div>
        <div class='form-btn'>
            <button type='submit' class='btn btn-primary'>Đăng nhập</button>
        </div>
    </form>
</div>
